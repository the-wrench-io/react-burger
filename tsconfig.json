{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDirs": [
      "src"
    ],
    "noImplicitAny": false,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
     "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".yarn",
    ".build-scripts",
    ".github",
    "build",
    "src/setupTests.ts",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}